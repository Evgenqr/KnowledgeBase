@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

@*<h1>@ViewData["Title"]</h1>*@
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-4">
            <section>
            <form class="form-horizontal" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Создать нового пользователя</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="Имя пользователя" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Пароль" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Подтвердите пароль" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-50 btn btn-default">Зарегистрировать</button>
            </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}