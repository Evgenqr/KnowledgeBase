@page
@model LoginModel

@{
    ViewData["Title"] = "Авторизоваться";
}
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-4">
            <h1>@ViewData["Title"]</h1>
       <section>
                <form class="form-horizontal" id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <label asp-for="Input.Username" class="form-label">Имя пользователя</label>
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="Имя пользователя" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Пароль" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="main-checkbox form-check-input" asp-for="Input.RememberMe" />
                       @* @Html.DisplayNameFor(m => m.Input.RememberMe)*@
                            <span class="text">Запомнить</span>
                    </label>
                    <button id="login-submit" type="submit" class="w-100 btn btn-default">Авторизоваться</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация нового пользователя</a>
                    </p>
@*                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
                </div>
            </div>
        </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
