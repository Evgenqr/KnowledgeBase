@model KnowledgeBase.Models.Document

@{
    ViewData["Title"] = "Новый документ";
}

<h1>Создание нового документа</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <hr>
            <form asp-action="Create" enctype="multipart/form-data" asp-controller="Home">
                <div class="col-sm-6">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
              <div class="col-sm-4">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control"
                            asp-items="@(new SelectList(ViewBag.Category, "Id", "Title"))">
                        <option value="">Выберите категорию</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
       
                <div class="col-sm-4">
                            <label asp-for="Department" class="control-label"></label>
                            <select asp-for="DepartmentId" class="form-control"
                                    asp-items="@(new SelectList(ViewBag.Department, "Id", "Title"))">
                                <option value="">Выберите отдел</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                 <div class="col-sm-4">
                    <label asp-for="Laws" class="control-label"></label>
                    <select asp-for="Laws" asp-items="@(new SelectList(ViewBag.Laws, "Id", "Title"))" class="form-control" multiple></select>
                    <span asp-validation-for="Laws" class="text-danger"></span>
                            </div>
                <div class="col-sm-10">
                    <label asp-for="Text" class="control-label"></label>
                    <textarea asp-for="Text" style="height:140px;" class="form-control"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Files" class="control-label"></label>
                    <input asp-for="Files" type="file" multiple class="form-control" />
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>
                <div class="description col-sm-12">
                    Максимальный размер файла: <strong>50 МБ</strong>.
                    <br>Разрешённые типы файлов:
                    <strong>txt doc docx xls xlsx pdf png jpg bmp rar zip ppt pptx rtf gif</strong>.
                </div>
                <div class="form-group">
                    <div class="col-sm-4"><button class="btn btn-info">Создать</button></div>
                </div>
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>












