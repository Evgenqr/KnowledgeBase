@model KnowledgeBase.Models.Document


<div class="col-sm-6">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="col-sm-4">
    <label asp-for="Category" class="control-label"></label>
    <select asp-for="CategoryId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Category, "Id", "Title"))">
        <option value="">Выберите категорию</option>
    </select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>
</div>

<div class="col-sm-4">
    <label asp-for="Department" class="control-label"></label>
    <select asp-for="DepartmentId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Department, "Id", "Title"))">
        <option value="">Выберите отдел</option>
    </select>
    <span asp-validation-for="DepartmentId" class="text-danger"></span>
</div>
<div class="col-sm-4">
    <label asp-for="Laws" class="control-label"></label>
    <select asp-for="Laws" name="selectedLaws" asp-items="@(new SelectList(ViewBag.Laws, "Id", "Title"))" class="form-control" multiple></select>
    <span asp-validation-for="Laws" class="text-danger"></span>
</div>
<div class="col-sm-10">
    <label asp-for="Text" class="control-label"></label>
    <textarea asp-for="Text" style="height:140px;" class="form-control"></textarea>
    <span asp-validation-for="Text" class="text-danger"></span>
</div>

